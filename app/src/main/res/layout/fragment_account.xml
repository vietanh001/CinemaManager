<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragment.FragmentAccount">

    <LinearLayout
        android:id="@+id/linear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Họ"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etHo"
                    android:hint="Họ"
                    android:textColorHint="@color/gray"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/icon_person_24"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/text_view"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tên"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etTen"
                    android:hint="Tên"
                    android:textColorHint="@color/gray"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/icon_person_24"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/text_view"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Số điện thoại"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etSDT"
            android:hint="Số điện thoại"
            android:textColorHint="@color/gray"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_phone_24"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/text_view"
            android:drawablePadding="5dp"
            android:layout_width="350dp"
            android:layout_height="45dp"/>

        <TextView
            android:text="Địa chỉ"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDiaChi"
            android:hint="Địa chỉ"
            android:textColorHint="@color/gray"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_house_24"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/text_view"
            android:drawablePadding="5dp"
            android:layout_width="350dp"
            android:layout_height="45dp"/>

        <TextView
            android:text="Tài khoản"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTaiKhoan"
            android:hint="Tài khoản"
            android:textColorHint="@color/gray"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_email_24"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/text_view"
            android:drawablePadding="5dp"
            android:layout_width="350dp"
            android:layout_height="45dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btThayDoi"
        android:text="Thay đổi"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="350dp"
        android:layout_height="45dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>